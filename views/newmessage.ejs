<%- include('header') %>
    <h1 class="title is-1"><%= title %></h1>
    <p class="subtitle is-3">Welcome to <%= title %></p>

    <% if (!!user) { %>
      <form method="post" action="/newmessage">
        <div class="field">
          <label class="label">Title:</label>
          <div class="control">
            <input class="input" type="text" name="title" placeholder="Eye catching title" />
          </div>
        </div>
        <div class="field">
          <label class="label">Message:</label>
          <div class="control">
            <textarea name="message" class="textarea" placeholder="I know the biggest secret"></textarea>
          </div>
        </div>
        <input class="button is-primary" type="submit" value="Post" />
      </form>
    <%  if (user.admin) { %>
      <p>You are admin</p>
    <% } %>

    <% if (user.isMember) { %>
      <p>You are member</p>
    <% }
    } else { %>
      <p>ti prosto chelovek</p>
    <% } %>
<%- include('footer') %>
